generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Libro{
  id Int @unique @default(autoincrement())
  titulo String
  descripcion String
  autor Autor @relation(fields: [nomYapAutor], references: [nomYap])
  nomYapAutor String
}
model Autor{
  nomYap String @unique
  nacimiento DateTime @default(now())
  libros Libro[]

}